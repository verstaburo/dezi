mixin header()
  +b.HEADER.header&attributes(attributes)
    +e.top
      +e.wrapper
        +e.logo
          +logo()(href="./")
        +e.NAV.menu
        +e.BUTTON.burger.js-show-menu(type="button")
          span
    +e.bottom
      +e.wrapper
        +e.left
          +e.titles
          +e.socials
        +e.right
          +e.languages
          +e.links
