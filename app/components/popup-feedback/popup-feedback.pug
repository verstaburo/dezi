  +popup.popup-feedback__&attributes(attributes)
    +e.bg
      +slider-bg().js-bg-slider
        +e.IMG.image(src="assets/images/index/bg-slide-1-sq.jpg")
        +e.IMG.image(src="assets/images/index/bg-slide-2-sq.jpg")
        +e.IMG.image(src="assets/images/index/bg-slide-3-sq.jpg")
