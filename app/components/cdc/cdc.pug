mixin cdc()
  +b.cdc&attributes(attributes)
    +cdc-lead
    +cdc-details
    +cdc-design
    +cdc-roadmap
    +cdc-documentation
    block

mixin cdc-title(tag)
  +b(tag || 'h3').cdc-title&attributes(attributes)
    block

mixin cdc-text(tag)
  +b(tag || 'div').cdc-text&attributes(attributes)
    block

mixin cdc-video(video, poster, tablet)
  +b.cdc-video&attributes(attributes)
    if tablet
      +e.media
        +e.VIDEO.video.js-video(src=video loop="loop" muted="muted" preload="metadata" playsinline="playsinline" poster=poster)
          source(src=video type="media/mp4")
      +e.border
        +e.IMG.image(src="assets/images/cdc/tablet-border.png")
    else
      +e.media
        +e.VIDEO.video.js-video(src=video loop="loop" muted="muted" preload="metadata" playsinline="playsinline" poster=poster)
          source(src=video type="media/mp4")
    block

mixin cdc-lead()
  +b.cdc-lead&attributes(attributes)
    +e.bg.js-sr_21
      +cdc-video('assets/video/cdc-bg.mp4', 'assets/images/cdc/poster-bg.jpg').__bg-video
