mixin aizkulises()
  +b.MAIN.aizkulises&attributes(attributes)
    block

mixin aizkulises-col-left()
  .aizkulises__col.aizkulises__col_left&attributes(attributes)
    block

mixin aizkulises-col-right()
  .aizkulises__col.aizkulises__col_right&attributes(attributes)
    block

mixin aizkulises-device(image, device)
  +b.aizkulises-device&attributes(attributes)
    +e.screen
      img(src=image)
    +e.device
      img(src=device)

mixin aizkulises-point(heading, text)
  +b.aizkulises-point&attributes(attributes)
    +e.H2.heading.js-sr.js-sr_1!= heading
    +e.P.text.js-sr.js-sr_2!= text

mixin aizkulises-list(array)
  +b.UL.aizkulises-list&attributes(attributes)
    each item in array
      +e.LI.item.js-sr.js-sr_1
        +icon(item[0]).__icon(width=item[2] height=item[3])
        != item[1]

mixin aizkulises-offer(logo, link, heading, text)
  +b.SECTION.aizkulises-offer&attributes(attributes)
    .container.container_inner.container_flex
      +aizkulises-col-left
        +e.logo.js-sr.js-sr_1
          img(src=logo)
        +e.A.link(href=link target="_blank").js-sr.js-sr_2!= link
        +e.H1.heading.js-sr.js-sr_3!= heading
        +e.P.text.js-sr.js-sr_4!= text
      +aizkulises-col-right.aizkulises-offer__right.js-sr.js-sr_6
        block

mixin aizkulises-map()
  +b.aizkulises-map&attributes(attributes)
    +e.picture
      img(src="assets/images/aizkulises/map.png")

