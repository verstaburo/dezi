extends ../../layouts/default

block head
  - var pageTitle = 'Dezi | Услуги'

block header
  - var headerData = getData('headerServices.json')

block headerAnchors
  +anchors([{anchor: '#design', name: 'ГРАФДИЗАЙН', section: 'design', active: "is-active"}, {anchor: '#webdesign', name: 'веб-дизайн', section: 'webdesign'}, {anchor: '#uiapp', name: 'интерфейсы', section: 'uiapp'}, {anchor: '#services', name: 'услуги', section: 'services'}]).__anchors

block content
  +section()._switcher
    .container.container_services
      +page-switcher(true).js-sr_11
  +page-content()(data-boot-area)
    +section()(data-section="design")._gdesign._mb153
      .container.container_services
        +text-block._services
          +text-block-title._big._mb40.js-sr_1 Графический дизайн
          +text-block-content.js-sr_2
            +e.text_mb80 Более 12 лет мы разрабатываем фирменные стили, рисуем красивые и запоминающиеся логотипы, помогаем компаниям создавать новый образ, или сопровождаем их в процессе ребрендинга, бережно сохраняя преемственность в получившемся результате.
            +text-block-subtitle.js-sr_3 С ЧЕМ К НАМ ОБРАЩАТЬСЯ?
            +ul-list.__list.js-sr_4
              li Логотип
              li Фирменный стиль
              li Выставочнй стенд
              li Упаковка
              li Буклет
              li Рекламная продукция
              li Навигация
              li Информационный дизайн
              li Любая графика
              li Разработка персонажей

    +section()(data-section="webdesign")._wdesign._mb153
      .container.container_services
        +text-block._services
          +text-block-title._big._mb40.js-sr_1 Веб-дизайн и разработка
          +text-block-content.js-sr_2
            +e.text_mb80 Более 10 лет, мы развиваемся как студия, которая трепетно относится к образу компании в интернете. Мы прокачали запредельный скилл в веб-дизайне и готовы создавать как презентационные-имиджевые проекты, так и сложные интерфейсные решения, в которых логика и пользовательский опыт — это результат сложной и комплексной работы массы специалистов.
    +section()(data-section="uiapp")._ui._mb198
      .container.container_services
        +text-block._services
          +text-block-title._big._mb40.js-sr_1 Интерфейсы и приложения
          +text-block-content.js-sr_2
            +e.text_mb80
              p Интерфейсы программ и приложений отличаются неповторимой спецификой и при схожих с веб-дизайном принципах построения логики, несут в себе неповторимую специфику.
              p Мы предлагаем разработку приложений для iOS и Android а также создание дизайна интерфейсов везде где необходимы наши навыки.
    +section()(data-section="services")._services._mb130
      .container.container_services
        +text-block._features
          +text-block-title._big._mb115.js-sr_1 Кое-что еще...
          +text-block-content
            +grid.grid_12.grid_gap100
              each item in getData('services.json')
                +col({xxl: 4, xl: 6, lg: 12})
                  +text-block()._feature
                    +collage(item.bg, item.icon)(class=item.class + ' __collage js-sr js-sr_77')
                    +text-block-subtitle.js-sr_2!=item.title
                    +text-block-content.js-sr_3
                      +e.text!=item.text
  +section()._request
    .container.container_services
      +request-form('Хотите классный проект?').__request
        +button('button')(type="submit")._gradient.__button НАЧАТЬ НОВЫЙ ПРОЕКТ
