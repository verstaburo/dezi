extends ../../layouts/default

block head
  - var pageTitle = 'Dezi | Услуги'

block header
  - var headerData = getData('headerServices.json')

block headerAnchors
  +anchors([{anchor: '#design', name: 'ГРАФДИЗАЙН', section: 'design'}, {anchor: '#webdesign', name: 'веб-дизайн', section: 'webdesign'}, {anchor: '#uiapp', name: 'интерфейсы', section: 'uiapp'}, {anchor: '#services', name: 'услуги', section: 'services'}]).__anchors

block content
  +section()._switcher
    .container.container_services
      +page-switcher
  +page-content()(data-boot-area)
    +section()(data-section="design")._gdesign._mb153
      .container.container_services
        +text-block._services
          +text-block-title._big.js-sr_1 Графический дизайн
          +text-block-content.js-sr_2
            +e.text Более 12 лет мы разрабатываем фирменные стили, рисуем красивые и запоминающиеся логотипы, помогаем компаниям создавать новый образ, или сопровождаем их в процессе ребрендинга, бережно сохраняя преемственность в получившемся результате.
            +text-block-subtitle.js-sr_3 С ЧЕМ К НАМ ОБРАЩАТЬСЯ?
            +ul-list.__list.js-sr_4
              li Логотип
              li Фирменный стиль
              li Выставочнй стенд
              li Упаковка
              li Буклет
              li Рекламная продукция
              li Навигация
              li Информационный дизайн
              li Любая графика
              li Разработка персонажей

    +section()(data-section="webdesign")._wdesign._mb153
      .container.container_services
        +text-block._services
          +text-block-title._big.js-sr_1 Веб-дизайн и разработка
          +text-block-content.js-sr_2
            +e.text Более 10 лет, мы развиваемся как студия, которая трепетно относится к образу компании в интернете. Мы прокачали запредельный скилл в веб-дизайне и готовы создавать как презентационные-имиджевые проекты, так и сложные интерфейсные решения, в которых логика и пользовательский опыт — это результат сложной и комплексной работы массы специалистов.
    +section()(data-section="uiapp")._ui._mb198
      .container.container_services
        +text-block._services
          +text-block-title._big.js-sr_1 Интерфейсы и приложения
          +text-block-content.js-sr_2
            +e.text
              p Интерфейсы программ и приложений отличаются неповторимой спецификой и при схожих с веб-дизайном принципах построения логики, несут в себе неповторимую специфику.
              p Мы предлагаем разработку приложений для iOS и Android а также создание дизайна интерфейсов везде где необходимы наши навыки.
    +section()(data-section="services")._services._mb153
      .container.container_services
        +text-block._services
          +text-block-title._big.js-sr_1 Кое-что еще...
          +text-block-content
  +section()._request
    .container.container_services
      +request-form('Хотите классный проект?').__request
        +button('button')(type="submit")._gradient.__button НАЧАТЬ НОВЫЙ ПРОЕКТ
